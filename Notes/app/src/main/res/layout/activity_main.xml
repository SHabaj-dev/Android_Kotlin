<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/outside"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_add_new_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        app:srcCompat="@drawable/add_icon"
        android:backgroundTint="@color/center"
        android:background="@color/black"
        android:elevation="10dp"
        android:focusable="true" />

    <SearchView
        android:id="@+id/sv_search_notes"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="16dp"
        android:elevation="20dp"
        android:background="@drawable/backround_shape"
        android:iconifiedByDefault="false"
        android:queryHint="@string/search_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_search_notes"
        tools:listitem="@layout/list_item" />
</androidx.constraintlayout.widget.ConstraintLayout>